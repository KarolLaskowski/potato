{
  "manifest_version": 2,

  "name": "Codename - Potato",
  "developer": {
    "name": "Karol Laskowski",
    "url": "https://codebake.dev/"
  },
  "description": "Extension to manage your time and block sites to improve your focus ability",
  "version": "0.05",
  "background": {
    "page": "html/background.html"
  },
  "homepage_url": "https://potato.codebake.dev/",
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Codename - Potato",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html"
}
